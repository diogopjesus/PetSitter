<resources>
    <!-- Base application theme. -->
    <style name="Theme.PetSitter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_jeans_300</item>
        <item name="colorPrimaryVariant">@color/blue_jeans_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maximum_green_500</item>
        <item name="colorSecondaryVariant">@color/maximum_green_700</item>

        <item name="android:colorBackground">@color/light_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/error_red</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <item name="colorOnBackground">@color/dark_gray</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ActivitySecondary" parent="Theme.PetSitter">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.ActivityMain" parent="Theme.PetSitter">
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
        <item name="color">@color/white</item>
    </style>

    <style name="requestRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40dp</item>
        <item name="color">@color/white</item>
    </style>
</resources>