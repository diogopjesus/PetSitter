<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CandidateProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/candidateProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/chooseCandidate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Choose"
            android:textSize="12sp"
            app:icon="@drawable/ic_baseline_how_to_reg_24"
            android:textColor="@color/white"/>

        <Button
            android:textSize="12sp"
            android:id="@+id/sendMessageCandidate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Message"
            app:icon="@drawable/ic_baseline_message_24"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white"/>

        <Button
            android:textSize="12sp"
            android:id="@+id/removeCandidate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Remove"
            app:icon="@drawable/ic_baseline_remove_24"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>