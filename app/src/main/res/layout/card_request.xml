<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/button_border">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="5dp"
            android:outlineSpotShadowColor="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="1dp"
            app:cardPreventCornerOverlap="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/requestPetImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top|left"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_person_24"
                app:shapeAppearanceOverlay="@style/requestRoundedImageView" />

            <TextView
                android:id="@+id/requestCandidateName"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="42dp"
                android:text="Roberto"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/requestCandidatesAvailable"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="42dp"
                android:background="#00000000"
                android:text="14 interested"
                android:textColor="@color/maximum_green_700"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:visibility="visible"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/requestType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginStart="110dp"
                android:layout_marginTop="5dp"
                android:text="Dog Walking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/blue_jeans_300"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="114dp"
                android:layout_marginTop="35dp"
                android:text="Pets:"
                android:textSize="14sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/requestAnimalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="36dp"
                android:text="Oliver, Tobi"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="114dp"
                android:layout_marginTop="60dp"
                android:text="Start Date:"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/requestStartDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="182dp"
                android:layout_marginTop="61dp"
                android:text="10/15/2001"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/requestEndDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="114dp"
                android:layout_marginTop="85dp"
                android:text="End Date:"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/requestEndDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="86dp"
                android:text="10/15/2001"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/requestTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="114dp"
                android:layout_marginTop="85dp"
                android:text="Time:"
                android:textSize="14sp"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/requestTime"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="151dp"
                android:layout_marginTop="86dp"
                android:text="88:88"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/requestVisitsPerDayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="114dp"
                android:layout_marginTop="110dp"
                android:text="Visits per day:"
                android:textSize="14sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/requestVisitsPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="204dp"
                android:layout_marginTop="111dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/moreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="310dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:background="#00000000"
                android:text="+info"
                android:textColor="@color/maximum_green_700"
                android:textSize="15sp"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</RelativeLayout>